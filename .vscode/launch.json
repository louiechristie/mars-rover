{
  "version": "2.0.0",
  "tasks": [
    // ... ,
    {
      "label": "Monitor TS Errors",
      "command": "./node_modules/.bin/tsc",
      "type": "shell",
      "args": ["--watch", "--noEmit", "--project", "."],
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "isBackground": true,
      "auto": true,
      "problemMatcher": "$tsc-watch"
    }
  ]
}
